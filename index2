  <!-- Script para activar el título flotante -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const titulo = document.querySelector('.titulo-imagen');

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach(entry => {
            if (!entry.isIntersecting) {
              titulo.classList.add('titulo-flotante');
            } else {
              titulo.classList.remove('titulo-flotante');
            }
          });
        },
        {
          threshold: 0.04
        }
      );

      observer.observe(titulo);
    });
  </script>
